<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mz.org.fgh.mentoring.fragment.HealthFacilityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data da Tutoria:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fragment_performed_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/fields_background"
                    android:editable="false"
                    android:padding="10dp" />

                <ImageButton
                    android:id="@+id/fragment_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="#EEEEEE"
                    android:src="@mipmap/ic_calendar" />

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_start_time_picker_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hora de Início:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fragment_performed_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/fields_background"
                    android:editable="false"
                    android:padding="10dp" />

                <ImageButton
                    android:id="@+id/fragment_start_time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#EEEEEE"
                    android:src="@drawable/ic_time" />

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_end_time_picker_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hora de Término:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fragment_performed_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/fields_background"
                    android:editable="false"
                    android:padding="10dp" />

                <ImageButton
                    android:id="@+id/fragment_end_time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#EEEEEE"
                    android:src="@drawable/ic_time" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Provincia:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/fragment_province"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Distrito:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/fragment_distric"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Unidade Sanitária:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/fragment_health_facility"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/fragment_cabinet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Gabinete:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/fragment_cabinet"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_time_of_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Horário:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/fragment_time_of_day"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_door_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Porta:"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold|italic" />

            <Spinner
                android:id="@+id/fragment_door"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp" />



        </LinearLayout>

    </ScrollView>

</FrameLayout>