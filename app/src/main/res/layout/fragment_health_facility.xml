<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mz.org.fgh.mentoring.fragment.HealthFacilityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Data da Mentoria:"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fragment_performed_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="8"
                android:background="@drawable/fields_background"
                android:editable="false"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/fragment_date_picker"
                android:layout_width="10dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/image_button"
                android:padding="10dp"
                android:src="@mipmap/ic_calendar_plus" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/referred_month"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/fragment_referred_month"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Provincia:"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/fragment_province"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Distrito:"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/fragment_distric"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Unidade SanitÃ¡ria:"
            android:textColor="#000"
            android:textSize="8pt"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/fragment_health_facility"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
