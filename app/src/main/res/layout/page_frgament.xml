<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="THE PAGE"
            android:textColor="#000"
            android:textSize="10pt"
            android:textStyle="bold|" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/fragment_page_competent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Competente"
                android:textSize="6pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fragment_page_unsatisfactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:text="Não Satisfatório"
                android:textSize="6pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fragment_page_non_applicable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:text="Não Aplicavel"
                android:textSize="6pt"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="#00695C"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>
